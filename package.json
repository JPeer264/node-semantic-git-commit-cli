{
  "name": "semantic-git-commit-cli",
  "version": "0.0.0",
  "description": "",
  "main": "lib",
  "bin": {
    "semantic-git-commit": "./dest/cli.js",
    "sgc": "./dest/cli.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "nyc ava",
    "lint": "eslint lib tests",
    "prepublish": "npm test",
    "postinstall": "npm run babel",
    "babel": "babel lib -d dest",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "prepush": "npm test"
  },
  "files": [
    "lib"
  ],
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "test"
    ]
  },
  "sgc": {
    "types": [
      {
        "emoji": ":emo:",
        "prefix": "Add:",
        "description": "Files added"
      },
      {
        "emoji": ":wrench:",
        "prefix": "Chore:",
        "description": "Changes that affect the build system or external dependencies (example scopes: gulp, broccoli, npm) and moving files"
      },
      {
        "emoji": ":construction_worker:",
        "prefix": "CI:",
        "description": "Changes to our CI configuration files and scripts (example scopes: Travis, Circle, BrowserStack, SauceLabs)"
      },
      {
        "emoji": ":memo:",
        "prefix": "Docs:",
        "description": "Documentation only changes"
      },
      {
        "emoji": ":sparkles:",
        "prefix": "Feat:",
        "description": "A new feature"
      },
      {
        "emoji": ":bug:",
        "prefix": "Fix:",
        "description": "A bug fix"
      },
      {
        "emoji": ":zapr:",
        "prefix": "Perf:",
        "description": "A code change that improves performance"
      },
      {
        "emoji": ":hammer:",
        "prefix": "Refactor:",
        "description": "A code change that neither fixes a bug nor adds a feature"
      },
      {
        "emoji": ":art:",
        "prefix": "Style:",
        "description": "Changes that do not affect the meaning of the code (white-space, formatting, missing semi-colons, etc)"
      },
      {
        "emoji": ":white_check_mark:",
        "prefix": "Test:",
        "description": "Adding missing tests or correcting existing tests"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JPeer264/node-semantic-git-commit-cli.git"
  },
  "author": "Jan Peer St√∂cklmair <janpeer264@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JPeer264/node-semantic-git-commit-cli/issues"
  },
  "homepage": "https://github.com/JPeer264/node-semantic-git-commit-cli#readme",
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.24.0",
    "babel-preset-env": "^1.2.1",
    "coveralls": "^2.12.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.13.2",
    "nyc": "^10.1.2"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "execa": "^0.6.1",
    "inquirer": "^3.0.6",
    "json-extra": "^0.5.0",
    "yargs": "^7.0.2"
  }
}